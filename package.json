{
  "name": "lnl",
  "private": true,
  "workspaces": [
    "packages/vanilla",
    "packages/plugin",
    "packages/playground/*",
    "packages/framework",
    "packages/lib"
  ],
  "devDependencies": {
    "eslint": "^8.33.0",
    "lerna": "^6.4.1",
    "typescript": "^4.9.5"
  },
  "scripts": {
    "clean": "npx -y rimraf node_modules **/node_modules/ package-lock.json && npm i",
    "build:p": "npm run build -w packages/plugin",
    "build:f": "npm run build -w packages/framework",
    "build": "npm run build:f && npm run build:p",
    "playground:counter": "npm run dev -w packages/playground/counter",
    "playground:list": "npm run dev -w packages/playground/list",
    "playground:todo-list": "npm run dev -w packages/playground/todo-list"
  }
}
